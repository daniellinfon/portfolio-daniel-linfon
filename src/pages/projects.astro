import Layout from '../layouts/Layout.astro';
import NavBar from '../components/Navbar.astro';
import ProjectsComponent from '../components/Projects.astro'; 
---

<Layout title="Projects - Daniel Linfon">

    <header class="fixed top-0 left-0 right-0 z-50 flex justify-between items-center px-6 py-6 md:px-12">
        <NavBar/>
    </header>

    <main class="max-w-6xl mx-auto px-6 pt-32 pb-20">
        
        <div class="mb-12 text-center md:text-left">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Projects</h1>
            <p class="text-neutral-400 text-lg max-w-2xl">
                A selection of Daniel's most technical works.
            </p>
        </div>

        <ProjectsComponent />

    </main>

    <footer class="text-center py-10 text-neutral-600 text-sm">
        <div class="text-neutral-600 text-sm font-mono pt-8 border-t border-neutral-800/50">
