---
import Layout from '../layouts/Layout.astro';
import Intro from '../components/Intro.astro';
import Experience from '../components/Experience.astro';
import Studies from '../components/Studies.astro';
import Skills from '../components/Skills.astro';
import NavBar from '../components/Navbar.astro';
---

<Layout title="About me - Daniel Linfon">
    
    <header class="fixed top-0 left-0 right-0 z-50 flex justify-between items-center px-6 py-6 md:px-12">
        <NavBar/>
    </header>

    <main class="max-w-6xl mx-auto px-6 pt-32 pb-20">
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
            
            <aside class="hidden md:block col-span-1">
                <div class="sticky top-32 space-y-4 border-l border-neutral-800 pl-4">
                    <a href="#intro" class="block text-sm text-neutral-400 hover:text-white transition-colors hover:border-l-2 hover:border-blue-500 -ml-[17px] pl-4 py-1">Introduction</a>
                    <a href="#experience" class="block text-sm text-neutral-400 hover:text-white transition-colors hover:border-l-2 hover:border-blue-500 -ml-[17px] pl-4 py-1">Work Experience</a>
                    <a href="#studies" class="block text-sm text-neutral-400 hover:text-white transition-colors hover:border-l-2 hover:border-blue-500 -ml-[17px] pl-4 py-1">Studies</a>
                    <a href="#skills" class="block text-sm text-neutral-400 hover:text-white transition-colors hover:border-l-2 hover:border-blue-500 -ml-[17px] pl-4 py-1">Skill Matrix</a>
                </div>
            </aside>

            <div class="col-span-1 md:col-span-3 space-y-32">
                
                <Intro/>

                <Experience/>

                <Studies/>

                <Skills/>

            </div>
        </div>

    </main>
    <footer class="text-center py-10 text-neutral-600 text-sm">
        <div class="text-neutral-600 text-sm font-mono pt-8 border-t border-neutral-800/50">
            Â© {new Date().getFullYear()} / Daniel Linfon
        </div>
    </footer>
</Layout>

