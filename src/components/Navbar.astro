<div class="text-xs font-mono text-neutral-400 w-[80px] text-right hidden sm:block">
    <span id="current-time">00:00:00</span>
</div>

<script>
    function updateTime() {
        const timeDisplay = document.getElementById("current-time");
        if(timeDisplay) {
            const now = new Date();
            timeDisplay.innerText = now.toLocaleTimeString("es-ES", {
                hour: "2-digit",
                minute: "2-digit",
                second: "2-digit",
            });
        }
    }
    setInterval(updateTime, 1000);
    updateTime();
</script>